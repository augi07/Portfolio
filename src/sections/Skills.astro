        class="absolute inset-0 flex flex-col items-center justify-center opacity-0 transition-opacity duration-200 pointer-events-none"
      >
        <img id="skill-image" src="" alt="" class="h-20 w-20 object-contain" />
        <p id="skill-text" class="text-xl mt-2 font-bold"></p>
      </div>
    </div>
  </section>
  
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const segments = document.querySelectorAll('.segment');
      const overlay = document.getElementById('skill-overlay');
      const skillImage = document.getElementById('skill-image');
      const skillText = document.getElementById('skill-text');
  
      segments.forEach((segment) => {
        segment.addEventListener('mouseover', () => {
          const skill = segment.getAttribute('data-label');
          const imageSrc = segment.getAttribute('data-image');
  
          if (skill && imageSrc) {
            skillText.textContent = skill;
            skillImage.src = imageSrc;
            skillImage.alt = skill;
            overlay.classList.add('opacity-100');
          }
  
          const circle = segment.querySelector('circle');
          circle.style.strokeWidth = '5';
        });
  
        segment.addEventListener('mouseout', () => {
          overlay.classList.remove('opacity-100');
  
          const circle = segment.querySelector('circle');
          circle.style.strokeWidth = '3';
        });
      });
    });
  </script>
  